# AdoPet TJ - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env or .env.local to Git!

# App Configuration
VITE_APP_NAME=AdoPet TJ
VITE_APP_ENV=development

# API Configuration
# Backend API URL - update when you have a backend
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Authentication
# JWT secret - generate a secure random string for production
VITE_JWT_SECRET=your-secret-key-here

# Firebase Configuration (if using Firebase for backend)
# VITE_FIREBASE_API_KEY=
# VITE_FIREBASE_AUTH_DOMAIN=
# VITE_FIREBASE_PROJECT_ID=
# VITE_FIREBASE_STORAGE_BUCKET=
# VITE_FIREBASE_MESSAGING_SENDER_ID=
# VITE_FIREBASE_APP_ID=

# Supabase Configuration (if using Supabase for backend)
# VITE_SUPABASE_URL=
# VITE_SUPABASE_ANON_KEY=

# Image Upload Service (if using Cloudinary or similar)
# VITE_CLOUDINARY_CLOUD_NAME=
# VITE_CLOUDINARY_UPLOAD_PRESET=

# Google Maps API (for location features)
# VITE_GOOGLE_MAPS_API_KEY=

# Analytics (if using Google Analytics, Mixpanel, etc.)
# VITE_GA_MEASUREMENT_ID=

# Feature Flags
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_DEBUG_MODE=true

# Social Media (for sharing features)
# VITE_FACEBOOK_APP_ID=
# VITE_TWITTER_HANDLE=

# Email Service (if using SendGrid, Mailgun, etc.)
# VITE_SENDGRID_API_KEY=

# Other
# Add any other environment variables your app needs
